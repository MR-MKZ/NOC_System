datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id         Int         @id @default(autoincrement())
    username   String      @unique
    password   String
    email      String      @unique
    role_id    Int
    role       Role        @relation(fields: [role_id], references: [id])
    team       Team[]
    alert_pack AlertPack[]
}

model Role {
    id    Int    @id @default(autoincrement())
    name  Roles  @default(Member)
    users User[]
}

model Team {
    id         Int         @id @default(autoincrement())
    name       String      @unique
    head_id    Int
    head       User        @relation(fields: [head_id], references: [id])
    alert_pack AlertPack[]
}

model Notification {
    id                Int         @id @default(autoincrement())
    type              NotifTypes? @default(Alert)
    priority          Priority?
    text              String
    service           String
    service_addr      String
    receive_time      DateTime    @default(now())
    alert_create_time DateTime
    resolve_time      DateTime?
    values            Json
    org_id            Int
    pack_id           Int
    pack              AlertPack   @relation(fields: [pack_id], references: [id])
}

model AlertPack {
    id               Int            @id @default(autoincrement())
    fingerprint      String
    type             NotifTypes?    @default(Alert)
    priority         Priority?
    master_memberId  Int?
    master_member    User?          @relation(fields: [master_memberId], references: [id])
    assigned_team_id Int?
    assigned_team    Team?          @relation(fields: [assigned_team_id], references: [id])
    status           Status         @default(Alert)
    in_progress_time DateTime?
    finish_time      DateTime?
    elapsed_time     String?
    start_at         DateTime       @default(now())
    end_at           DateTime?
    notifications    Notification[]
}

model IncidentReport {
    id               Int    @id @default(autoincrement())
    incident_title   String
    incident_service String
    problem          String
    Soloution        String
    elapsed_time     String
    resources        String
}

enum Status {
    Alert
    Resolved
    Pending
    InProgress
    Done
}

enum NotifTypes {
    Alert
    Incident
}

enum Roles {
    Admin
    Team_724
    Head
    Member
}

enum Priority {
    High
    Medium
    Low
}
